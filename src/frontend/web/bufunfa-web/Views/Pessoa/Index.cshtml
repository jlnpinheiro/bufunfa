@using JNogueira.Bufunfa.Web.Helpers

@inject GitInfoHelper gitInfoHelper

@{
    ViewData["Titulo"] = "Pessoas";
    Layout = "_Master";
}

@section ViewsJs
{
    <environment include="Development">
        <script src="~/js/views/pessoa.js?v=@gitInfoHelper.Versao"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/js/views/pessoa.min.js?v=@gitInfoHelper.Versao"></script>
    </environment>
}

<div class="row mb-3">
    <div class="col-sm-12">
        <button class="btn btn-sm btn-secondary btn-hover-primary" id="btn-cadastrar-pessoa">
            <i class="la la-plus"></i>Adicionar
        </button>
    </div>
</div>

<div class="kt-portlet">
    <div class="kt-portlet__body">
        <table class="table table-striped table-hover table-sm" id="tblPessoa">
            <thead>
                <tr>
                    <th>Nome</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
        </table>
    </div>
</div>