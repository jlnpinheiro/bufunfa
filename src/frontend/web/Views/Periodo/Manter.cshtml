@using JNogueira.Bufunfa.Web.Helpers

@model JNogueira.Bufunfa.Web.Models.Periodo

<div class="kt-portlet app-modal-md" style="margin-bottom:0;" id="portlet-manter">
    <div class="kt-portlet__head popup">
        <div class="kt-portlet__head-label">
            <h3 class="kt-portlet__head-title">
                @(Model == null ? "Adicionar" : "Alterar") período
            </h3>
        </div>
    </div>
    <form class="kt-form kt-form--label-right" id="form-manter-periodo">
        <input type="hidden" id="iIdPeriodo" name="iIdPeriodo" value="@(Model != null ? Model.Id.ToString() : string.Empty)">
        <div class="kt-portlet__body">
            <div class="form-group row">
                <div class="col-lg-12">
                    <label>Nome</label> @CustomHtmlHelper.IconeCampoObrigatorio()
                    <input type="text" class="form-control text-uppercase" id="iNome" name="iNome" value="@Model?.Nome">
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-6 form-group-sub">
                    <div class="form-group">
                        <label>Início do período</label> @CustomHtmlHelper.IconeCampoObrigatorio()
                        <div class="input-group date">
                            <div class="input-group-prepend"><span class="input-group-text"><i class="la la-calendar"></i></span></div>
                            <input type="text" class="form-control datepicker" id="iDataInicio" name="iDataInicio" value="@Model?.DataInicio.ToString("dd/MM/yyyy")">
                        </div>
                    </div>
                </div>
                <div class="col-md-6 form-group-sub">
                    <div class="form-group">
                        <label>Fim do período</label> @CustomHtmlHelper.IconeCampoObrigatorio()
                        <div class="input-group date">
                            <div class="input-group-prepend"><span class="input-group-text"><i class="la la-calendar"></i></span></div>
                            <input type="text" class="form-control datepicker" id="iDataFim" name="iDataFim" value="@Model?.DataFim.ToString("dd/MM/yyyy")">
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="kt-portlet__foot popup">
            <div class="kt-form__actions">
                <div class="row">
                    <div class="col-lg-12 kt-align-right">
                        <button type="reset" class="btn btn-sm btn-outline-hover-primary btn-elevate btn-fechar"><i class="la la-close"></i> Cancelar</button>
                        <button type="submit" class="btn btn-sm btn-primary"><i class="la la-check"></i> Salvar</button>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>