@using JNogueira.Bufunfa.Web.Helpers

@inject CustomHtmlHelper customHtmlHelper

<div class="kt-portlet app-modal-md" style="margin-bottom:0;">
    <div class="kt-portlet__head popup">
        <div class="kt-portlet__head-label">
            <h3 class="kt-portlet__head-title">
                Transferir valores entre contas
            </h3>
        </div>
    </div>
    <form class="kt-form kt-form--label-right" id="form-transferir">
        <div class="kt-portlet__body">
            <div class="form-group row">
                <div class="col-lg-12  form-group-sub">
                    <label>Conta origem</label> @CustomHtmlHelper.IconeCampoObrigatorio()
                    @customHtmlHelper.SelectContasCartoesCredito("sTransferenciaContaOrigem", "form-control", null, TipoItemSelectContasCartoesCredito.SomenteContas)
                    <span class="form-text text-muted"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-lg-12  form-group-sub">
                    <label>Conta destino</label> @CustomHtmlHelper.IconeCampoObrigatorio()
                    @customHtmlHelper.SelectContasCartoesCredito("sTransferenciaContaDestino", "form-control", null, TipoItemSelectContasCartoesCredito.SomenteContas)
                    <span class="form-text text-muted"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-6 form-group-sub">
                    <label>Data</label> @CustomHtmlHelper.IconeCampoObrigatorio()
                    <div class="input-group date">
                        <div class="input-group-prepend"><span class="input-group-text"><i class="la la-calendar"></i></span></div>
                        <input type="text" class="form-control datepicker" id="iTransferenciaData" name="iTransferenciaData" data-date-end-date="0d">
                    </div>
                </div>

                <div class="col-sm-6 form-group-sub">
                    <label>Valor</label> @CustomHtmlHelper.IconeCampoObrigatorio()
                    <div class="input-group">
                        <div class="input-group-prepend"><span class="input-group-text">R$</span></div>
                        <input type="text" class="form-control" id="iTransferenciaValor" name="iTransferenciaValor">
                    </div>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-12">
                    <label>Observação</label>
                    <input type="text" class="form-control" id="iTransferenciaObservacao" name="iTransferenciaObservacao">
                </div>
            </div>
        </div>
        <div class="kt-portlet__foot popup">
            <div class="kt-form__actions">
                <div class="row">
                    <div class="col-lg-12 kt-align-right">
                        <button type="reset" class="btn btn-sm btn-outline-hover-primary btn-elevate btn-fechar"><i class="la la-close"></i> Cancelar</button>
                        <button type="submit" class="btn btn-sm btn-primary"><i class="la la-check"></i> Transferir</button>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>