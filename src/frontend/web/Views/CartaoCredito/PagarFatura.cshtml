@using JNogueira.Bufunfa.Web.Helpers

@inject CustomHtmlHelper customHtmlHelper

<div class="kt-portlet app-modal-md" style="margin-bottom:0;">
    <div class="kt-portlet__head popup">
        <div class="kt-portlet__head-label">
            <h3 class="kt-portlet__head-title">
                Pagar fatura
            </h3>
        </div>
    </div>
    <form class="kt-form kt-form--label-right" id="form-pagar-fatura">
        <div class="kt-portlet__body">
            <div class="form-group row">
                <div class="col-lg-12  form-group-sub">
                    <label>Conta do lançamento</label> @CustomHtmlHelper.IconeCampoObrigatorio()
                    @customHtmlHelper.SelectContasCartoesCredito("sLancamentoContaFatura", "form-control", null, TipoItemSelectContasCartoesCredito.SomenteContas)
                    <span class="form-text text-muted"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-6 form-group-sub">
                    <label>Data do lançamento</label> @CustomHtmlHelper.IconeCampoObrigatorio()
                    <div class="input-group date">
                        <div class="input-group-prepend"><span class="input-group-text"><i class="la la-calendar"></i></span></div>
                        <input type="text" class="form-control datepicker" id="iLancamentoDataFatura" name="iLancamentoDataFatura" data-date-end-date="0d">
                    </div>
                </div>

                <div class="col-sm-6 form-group-sub">
                    <label>Valor do lançamento</label> @CustomHtmlHelper.IconeCampoObrigatorio()
                    <div class="input-group">
                        <div class="input-group-prepend"><span class="input-group-text">R$</span></div>
                        <input type="text" class="form-control" id="iLancamentoValorFatura" name="iLancamentoValorFatura" value="@(((decimal)ViewBag.ValorFatura).ToString("N2"))" disabled>
                    </div>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-12 form-group-sub">
                    <div class="form-group ">
                        <label>Pessoa</label>
                        <select class="form-control kt-select2 kt-select2-general" id="sLancamentoPessoaFatura" name="sLancamentoPessoa">
                        </select>
                    </div>
                </div>
            </div>
        </div>
        <div class="kt-portlet__foot popup">
            <div class="kt-form__actions">
                <div class="row">
                    <div class="col-lg-12 kt-align-right">
                        <button type="reset" class="btn btn-sm btn-outline-hover-primary btn-elevate btn-fechar"><i class="la la-close"></i> Cancelar</button>
                        <button type="submit" class="btn btn-sm btn-primary"><i class="la la-check"></i> Pagar</button>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>