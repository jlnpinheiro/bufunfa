@using JNogueira.Bufunfa.Web.Helpers

@inject CustomHtmlHelper customHtmlHelper

<div class="kt-portlet app-modal-md" style="margin-bottom:0;" id="portlet-picpay">
    <div class="kt-portlet__head popup">
        <div class="kt-portlet__head-label">
            <h3 class="kt-portlet__head-title">
                Pagar com Picpay
            </h3>
        </div>
    </div>
    <form class="kt-form kt-form--label-right" id="form-pagar-picpay">
        <div class="kt-portlet__body">
            <div class="alert alert-secondary  fade show" role="alert">
                <div class="alert-icon"><i class="fa fa-info"></i></div>
                <div class="alert-text">Cria um agendamento para o cartão de crédito selecionado, com data do próximo vencimento da fatura e para a pessoa <b>Picpay</b>.</div>
                <div class="alert-close">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true"><i class="la la-close"></i></span>
                    </button>
                </div>
            </div>
            
            <div class="form-group row">
                <div class="col-lg-12  form-group-sub">
                    <label>Cartão de crédito</label> @CustomHtmlHelper.IconeCampoObrigatorio()
                    @customHtmlHelper.SelectContasCartoesCredito("sPicpayCartao", "form-control", null, TipoItemSelectContasCartoesCredito.SomenteCartoesCredito)
                    <span class="form-text text-muted"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-lg-12 form-group-sub">
                    <label for="sCategoria">Categoria</label> @CustomHtmlHelper.IconeCampoObrigatorio()
                    @customHtmlHelper.SelectCategorias("sPicpayCategoria", "form-control", null, false)
                    <span class="form-text text-muted"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-md-6 form-group-sub">
                    <label>Data da compra</label> @CustomHtmlHelper.IconeCampoObrigatorio()
                    <div class="input-group date">
                        <div class="input-group-prepend"><span class="input-group-text"><i class="la la-calendar"></i></span></div>
                        <input type="text" class="form-control datepicker" id="iPicpayDataCompra" name="iPicpayDataCompra" data-date-end-date="0d">
                    </div>
                </div>

                <div class="col-sm-6 form-group-sub">
                    <label>Valor da compra</label> @CustomHtmlHelper.IconeCampoObrigatorio()
                    <div class="input-group">
                        <div class="input-group-prepend"><span class="input-group-text">R$</span></div>
                        <input type="text" class="form-control" id="iPicpayValorCompra" name="iPicpayValorCompra">
                    </div>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-sm-12">
                    <label>Observação</label>
                    <input type="text" class="form-control" id="iPicpayObservacao" name="iPicpayObservacao">
                </div>
            </div>
        </div>
        <div class="kt-portlet__foot popup">
            <div class="kt-form__actions">
                <div class="row">
                    <div class="col-lg-12 kt-align-right">
                        <button type="reset" class="btn btn-sm btn-outline-hover-primary btn-elevate btn-fechar"><i class="la la-close"></i> Cancelar</button>
                        <button type="submit" class="btn btn-sm btn-primary"><i class="la la-check"></i> Pagar</button>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>